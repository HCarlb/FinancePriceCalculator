<UserControl x:Class="FinancePriceToolProject.Views.PageTwoView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FinancePriceToolProject.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition MinWidth="300"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>    
        <StackPanel Grid.Column="0" Grid.Row="0" Background="#EEE" Margin="0 0 10 0">
            <StackPanel Margin="10">
                <Button x:Name="GotoPageOne" Content="&lt;&lt; Goto to previous page" Margin="0 0 0 30"/>
                <TextBlock Text="3. Select target date:"/>
                <DatePicker x:Name="TargetDatePicker"/>

                <Button x:Name="CreateDataGridContent" Content="4. Display data &gt;&gt;" DockPanel.Dock="Top" Margin="0 20 0 0"/>

                <WrapPanel Margin="0 20">
                    <TextBlock Text="Found ("  TextWrapping="Wrap"/>
                    <TextBlock Text="{Binding DataGrid1ItemSource.Count}"  TextWrapping="Wrap"/>
                    <TextBlock Text=") Items." TextWrapping="Wrap"/>
                </WrapPanel>
                <WrapPanel>
                    <TextBlock Text="Prices are calculated as the Bill of Material looks at" TextWrapping="Wrap"/>
                    <TextBlock Text="{Binding SelectedDate}" FontWeight="SemiBold"  TextWrapping="Wrap"/>
                </WrapPanel>
                <Border BorderThickness="1" BorderBrush="DarkRed" CornerRadius="12"  Background="#FFFCFC95" Padding="10" Margin="0 50 0 0">
                    <WrapPanel TextBlock.Foreground="#FFD40000">
                        <TextBlock Text="Be aware!" FontWeight="SemiBold"/>
                        <TextBlock Text="Calculated prices may be wrong if Purchased Parts are lacking price." TextWrapping="Wrap"/>
                    </WrapPanel>
                </Border>
            </StackPanel>
        </StackPanel>

            <!--<DataGrid x:Name="dataGrid1" 
                    Grid.Row="0" Grid.Column="1"
                    ItemsSource="{Binding DataGrid1ItemSource}" 
                    AutoGenerateColumns="True" 
                    RowHeaderWidth="0" 
                    HorizontalGridLinesBrush="{x:Null}" 
                    VerticalGridLinesBrush="#FFAAAAAA" 
                    AlternatingRowBackground="#FFE4E4E4" 
                    GridLinesVisibility="Vertical" 
                    CellStyle="{StaticResource DataGridCellStyle1}"/>-->

        <DataGrid x:Name="dataGrid1" 
                    Grid.Row="0" Grid.Column="1"
                    ItemsSource="{Binding DataGrid1ItemSource}" 
                    AutoGenerateColumns="False" 
                    RowHeaderWidth="0" 
                    HorizontalGridLinesBrush="{x:Null}" 
                    VerticalGridLinesBrush="#FFAAAAAA" 
                    AlternatingRowBackground="#FFE4E4E4" 
                    GridLinesVisibility="Vertical" 
                  ClipboardCopyMode="IncludeHeader">
            <!-- CellStyle="{StaticResource DataGridCellStyle1}" -->

            <DataGrid.Resources>
                <DataTemplate x:Key="ProductIdColumnTemplate">
                    <TextBlock Text="{Binding Id}" FontWeight="SemiBold" Padding="15 3" HorizontalAlignment="Right"/>
                </DataTemplate>
                <DataTemplate x:Key="FixedPriceColumnTemplate">
                    <TextBlock Text="{Binding FixedPrice, StringFormat='{}{0:C}', ConverterCulture=sv-SE}" HorizontalAlignment="Right" Padding="15 3"/>
                </DataTemplate>
                <DataTemplate x:Key="CalculatedPriceColumnTemplate">
                    <TextBlock Text="{Binding CalculatedPrice, StringFormat='{}{0:C}', ConverterCulture=sv-SE}" HorizontalAlignment="Right" Padding="15 3"/>
                </DataTemplate>
                <DataTemplate x:Key="CalculatedPriceActualColumnTemplate">
                    <TextBlock Text="{Binding CalculatedPriceActual, StringFormat='{}{0:C}', ConverterCulture=sv-SE}" HorizontalAlignment="Right" Padding="15 3"/>
                </DataTemplate>
                <DataTemplate x:Key="DeltaFixedVsActualPriceColumnTemplate">
                    <TextBlock Text="{Binding DeltaFixedVsActualPrice, StringFormat={}{0:#0.00' %'}}" HorizontalAlignment="Right" Padding="15 3"/>
                </DataTemplate>
                <DataTemplate x:Key="ContainsProductsLackingFixedPriceColumnTemplate">
                    <TextBlock Text="{Binding ContainsProductsLackingFixedPrice}" HorizontalAlignment="Left" Foreground="Blue" Padding="15 3"/>
                </DataTemplate>
            </DataGrid.Resources>
            <DataGrid.Columns>
                <DataGridTemplateColumn Header="Product Id" CellTemplate="{StaticResource ProductIdColumnTemplate}"/>
                <DataGridTemplateColumn Header="Fixed Material Price" CellTemplate="{StaticResource FixedPriceColumnTemplate}"/>
                <DataGridTemplateColumn Header="Calculated Price" CellTemplate="{StaticResource CalculatedPriceColumnTemplate}"/>
                <DataGridTemplateColumn Header="Calculated Price Actual" CellTemplate="{StaticResource CalculatedPriceActualColumnTemplate}"/>
                <DataGridTemplateColumn Header="DeltaFixedVsActualPrice" CellTemplate="{StaticResource DeltaFixedVsActualPriceColumnTemplate}"/>
                <DataGridTemplateColumn Header="Contains Products Lacking Fixed Price" CellTemplate="{StaticResource ContainsProductsLackingFixedPriceColumnTemplate}"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
